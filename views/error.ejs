<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading text-center">Error : <%= err.message %></h4>
            <hr>
            <% if( process.env.NODE_ENV !== "production") { %> 
            <p class="mb-0 text-break"><%= err.statusCode %> -- <%= err.stack %></p>
            <hr>
            <% } %> 
        </div>
    </div>
</div>